<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081"/> <!-- button color when pressed -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#E91E63"/> <!-- default button color -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
