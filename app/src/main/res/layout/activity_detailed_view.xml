<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedViewActivity">

    <!-- VideoView for the background video -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- RelativeLayout containing UI components -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#80000000"> <!-- semi-transparent background -->

        <!-- TextView for details with rounded corners and shadow -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_background"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:text="Details will appear here"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints"/>

        <!-- TextView for average with rounded corners and shadow -->
        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_below="@id/tvDetails"
            android:background="@drawable/rounded_background"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:text="Average will appear here"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            tools:ignore="MissingConstraints"/>

        <!-- Back button with rounded corners and shadow -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@id/tvAverage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints"/>




    </RelativeLayout>
</FrameLayout>
